<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    tools:context=".frDialog_ThemKhachHang">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Thông tin nhân viên"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên khách nhân viên "
            android:textSize="18dp"
            android:gravity="left"/>
        <EditText
            android:id="@+id/edtTenNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="18dp"
            android:gravity="left"/>
        <EditText
            android:id="@+id/edtSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="18dp"
            android:gravity="left"/>
        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bộ Phận"
            android:textSize="18dp"
            android:gravity="left"/>
       <Spinner
           android:layout_width="match_parent"
           android:layout_height="35dp"
           android:id="@+id/spPhongBan"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9C000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chức vụ"
            android:textSize="18dp"
            android:gravity="left"/>
        <EditText
            android:id="@+id/edtChucVu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:backgroundTint="#03A9F4"
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"/>
        <Button
            android:id="@+id/btnClose"
            android:backgroundTint="#74575757"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"/>

    </LinearLayout>

</RelativeLayout>